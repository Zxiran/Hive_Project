create table hbase_sales_order_data
     (key string,
     ord_qty string,
     price string,
     odr_line_no string,
     sales string,
     status string,
     qtr_id string,
     month_id string,
     yr_id string,
     prd_line string,
     msrp string,
     prd_code string,
     phone string,
     city string,
     state string,
     post_code string,
     country string,
     trr string,
     first_name string,
     last_name string,
     deal_size string
     )
     STORED BY 'org.apache.hadoop.hive.hbase.HBaseStorageHandler'
     WITH SERDEPROPERTIES
     ("hbase.columns.mapping" = ":key,customer:first_name,customer:last_name,customer:phone,order:ord_qty,order:odr_line_no,order:status,product:prd_line,product:prd_code,product:price,product:msrp,purchase:month_id,purchase:qtr_id,purchase:yr_id,location:city,location:post_code,location:state,location:trr,location:country,others:sales,others:deal_size")
     tblproperties("hbase.table.name"="sales_data");
